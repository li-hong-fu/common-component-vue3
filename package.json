{
    "name": "common-component-vue3",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build && node ./scripts/dns-prefetch.js",
        "build:pre": "vue-tsc && vite build --mode staging && node ./scripts/dns-prefetch.js",
        "build:pro": "vue-tsc && vite build --mode production && node ./scripts/dns-prefetch.js",
        "lint:create": "eslint --init",
        "lint": "eslint \"src/**/*.{js,vue,ts}\" --fix",
        "prettier-format": "prettier --config .prettierrc.cjs \"src/**/*.{vue,js,ts}\" --write",
        "lint:css": "stylelint **/*.{vue,css,sass,scss,less} --fix",
        "prepare": "husky install",
        "preview": "vite preview"
    },
    "dependencies": {
        "typescript": "5.0.3",
        "vite-plugin-eslint": "^1.8.1",
        "vue": "^3.2.47"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.5",
        "@commitlint/config-conventional": "^17.6.5",
        "@types/eslint": "^8.40.2",
        "@types/node": "^20.3.1",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "@vitejs/plugin-vue": "^4.1.0",
        "eslint": "^8.43.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.14.1",
        "glob": "^10.2.7",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "node-html-parser": "^6.1.5",
        "postcss": "^8.4.24",
        "postcss-html": "^1.5.0",
        "prettier": "^2.8.8",
        "stylelint": "^15.7.0",
        "stylelint-config-recommended-vue": "^1.4.0",
        "stylelint-config-standard": "^33.0.0",
        "stylelint-config-standard-scss": "^9.0.0",
        "url-regex": "^5.0.0",
        "vite": "^4.3.9",
        "vite-plugin-stylelint": "^4.3.0",
        "vue-tsc": "^1.4.2"
    },
    "lint-staged": {
        "*.{js,jsx,vue,ts,tsx}": [
            "npm run lint",
            "npm run prettier-format"
        ],
        "*.{vue,less,css,sass}": [
            "npm run lint:css"
        ]
    }
}
